# TaskVision Frontend Environment Configuration
# Copy this file to .env and update the values

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# Environment
REACT_APP_ENV=development

# Features Flags
REACT_APP_ENABLE_GEOLOCATION=true
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_DARK_MODE=true

# Google Maps Configuration
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Push Notifications Configuration
REACT_APP_VAPID_PUBLIC_KEY=your-vapid-public-key

# Analytics Configuration
REACT_APP_GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Error Reporting Configuration
REACT_APP_SENTRY_DSN=your-sentry-dsn

# Performance Configuration
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# PWA Configuration
REACT_APP_PWA_THEME_COLOR=#3b82f6
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff

# Local Storage Keys
REACT_APP_STORAGE_PREFIX=taskvision_

# Date/Time Configuration
REACT_APP_DEFAULT_TIMEZONE=America/New_York
REACT_APP_DATE_FORMAT=MM/DD/YYYY
REACT_APP_TIME_FORMAT=HH:mm

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Location Configuration
REACT_APP_DEFAULT_LATITUDE=40.7128
REACT_APP_DEFAULT_LONGITUDE=-74.0060
REACT_APP_GEOFENCE_RADIUS=100

# Refresh Intervals (in milliseconds)
REACT_APP_LOCATION_REFRESH_INTERVAL=30000
REACT_APP_TASK_REFRESH_INTERVAL=60000
REACT_APP_NOTIFICATION_REFRESH_INTERVAL=15000

# Development Configuration
REACT_APP_DEBUG_MODE=true
REACT_APP_MOCK_API=false

# Build Configuration
GENERATE_SOURCEMAP=true
SKIP_PREFLIGHT_CHECK=true
