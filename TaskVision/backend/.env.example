# TaskVision Backend Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/taskvision
MONGODB_TEST_URI=mongodb://localhost:27017/taskvision_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@taskvision.com

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Redis Configuration (for session storage and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Geolocation Configuration
GEOFENCE_RADIUS=100
LOCATION_UPDATE_INTERVAL=30000

# Push Notification Configuration
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@taskvision.com

# External API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
WEATHER_API_KEY=your-weather-api-key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/taskvision.log

# Security Configuration
HELMET_CSP_DIRECTIVES=default-src 'self'
COOKIE_SECRET=your-cookie-secret-change-this-in-production

# Backup Configuration
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Development Configuration
DEV_SEED_DATABASE=false
DEV_RESET_DATABASE=false
